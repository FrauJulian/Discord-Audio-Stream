{
    "compilerOptions": {
        "strict": true,
        "allowJs": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },

    "include": ["src"],
    "exclude": ["node_modules"]
}